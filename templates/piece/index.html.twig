{% extends 'base.html.twig' %}

{% block title %}Piece index{% endblock %}

{% block body %}
    {% if descrip|default(null) %}{% endif %}
    {% if ident|default(null) %}{% endif %}
    {% if code|default(null) %}{% endif %}
    {% if libelle|default(null) %}{% endif %}
    {% if annee|default(null) %}{% endif %}
    {% if annul|default(null) %}{% endif %}
    {% if bordereau|default(null) %}{% endif %}
    {% if obj|default(null) %}{% endif %}
    {% if sens|default(null) %}{% endif %}
    <div class="container-fluid">
        <div class="row">
            <h1>Piece index</h1>
            <table style="width: 100;" class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <form class="form-inline mt-1" method="POST" action="{{ path('app_piece.findallcontain') }}">
                            <th class="text-left align-top" scope="col">Description
                                </br>
                                <div class="form-group mr-1 mb-2">
                                    <input type="text" class="input-group input-group-lg" name="Description" 
                                        value="{% if descrip|default and descrip != "**" %}{{ descrip }}{% endif %}">
                                </div>
                            </th>
                            <th class="text-left align-top" scope="col">IdentifiantPes
                            </br>
                                <div class="form-group mr-1 mb-2">
                                    <input type="text" class="input-group input-group-lg" name="IdentifiantPes" 
                                        value="{% if ident|default and ident != "**" %}{{ ident }}{% endif %}">
                                </div>
                            </th>
                            <th class="text-left align-top" scope="col">CodeEntite
                                </br>
                                <div class="form-group mr-1 mb-2">
                                    <input type="text" class="input-group input-group-lg" name="CodeEntite" 
                                        value="{% if code|default and code != "**" %}{{ code }}{% endif %}">
                                </div>
                            </th>
                            <th class="text-left align-top" scope="col">LibelleEntite
                                </br>
                                <div class="form-group mr-1 mb-2">
                                    <input type="text" class="input-group input-group-lg" name="LibelleEntite" 
                                        value="{% if libelle|default and libelle != "**" %}{{ libelle }}{% endif %}">
                                </div>
                            </th>
                            <th class="text-left align-top" scope="col">Exercice
                                </br>
                                <div class="form-group mr-1 mb-2">
                                    <input type="number" class="input-group input-group-lg" name="Exercice" min = "2012"
                                        value="{% if annee|default and annee != "**" %}{{ annee }}{% endif %}">
                                </div>
                            </th>
                            <th class="text-left align-top" scope="col">AnnulationRejet
                            </br>
                                <div class="form-group mr-1 mb-2">
                                    <input type="text" class="input-group input-group-lg" name="AnnulationRejet"
                                        value="{% if annul|default and annul != "**" %}{{ annul }}{% endif %}">
                                </div>
                            </th>
                            <th class="text-left align-top" scope="col">BordereauPiece
                            </br>
                                <div class="form-group mr-1 mb-2">
                                    <input type="text" class="input-group input-group-lg" name="BordereauPiece" 
                                        value="{% if bordereau|default and bordereau != "**" %}{{ bordereau }}{% endif %}">
                                </div>
                            </th>
                            <th class="text-left align-top" scope="col">Objet
                                </br>
                                <div class="form-group mr-1 mb-2">
                                    <input type="text" class="input-group input-group-lg" name="Objet" 
                                        value="{% if obj|default and obj != "**" %}{{ obj }}{% endif %}">
                                </div>
                            </th>
                            <th class="text-left align-top" scope="col">Sens
                                </br>
                                <div class="form-group mr-1 mb-2">
                                    <input type="text" class="input-group input-group-lg" name="Sens" 
                                        value="{% if sens|default and sens != "**" %}{{ sens }}{% endif %}">
                                </div>
                            </th>
                            <th class="text-left align-top" scope="col">
                                </br>
                                <div class="form-group mr-1 mb-2">
                                    <button type="submit" class="btn btn-info mb-2 btn-sm">filtrer</button>
                                </div>
                            </th>
                        </form>
                    </tr>
                </thead>
                <tbody>
                {% for piece in pagination %}
                    <tr>
                        <td><a href="{{ path('app_piece.show', { 'id': piece.id }) }}" class="link-dark">{{ piece.description }}</a></td>
                        <td><a href="{{ path('app_piece.show', { 'id': piece.id }) }}" class="link-dark">{{ piece.identifiantPes }}</a></td>
                        <td>{{ piece.codeEntite }}</td>
                        <td>{{ piece.libelleEntite }}</td>
                        <td>{{ piece.exercice }}</td>
                        <td>{{ piece.annulationRejet }}</td>
                        <td>{{ piece.bordereauPiece }}</td>
                        <td>{{ piece.objet }}</td>
                        <td>{{ piece.sens }}</td>
                        <td><a href="{{ path('app_piece.dl', { 'id': piece.id }) }}">PDF</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="14">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {# display navigation #}
            <div class="navigation d-flex justify-content-center mt-4">
                {{ knp_pagination_render(pagination) }}
            </div>

{% endblock %}
